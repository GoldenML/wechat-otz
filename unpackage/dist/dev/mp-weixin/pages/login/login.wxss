/* 水平间距 */
.login-form {
  position: absolute;
  left: 50%;
  top: 40%;
  width: 80%;
  transform: translate(-50%, -50%);
}
.login-form__title {
  text-align: center;
  margin-bottom: 50px;
  font-size: 30px;
}
.login-form__login {
  margin-top: 50px;
}
.login-form .get-code {
  width: 35%;
  margin-left: 10px;
  display: inline-block;
  border: 1px solid gray;
  line-height: 32px;
  text-align: center;
  cursor: pointer;
}